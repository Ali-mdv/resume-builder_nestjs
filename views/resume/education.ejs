<!DOCTYPE html>
<html lang="en-US">
  <%- include('./components/head'); -%>
  <body id="top">
    <div class="page-content">
      <div class="section" id="about">
        <div class="container">
          <%- include('./components/navbar'); -%>
          <div class="card" data-aos="fade-up" data-aos-offset="10">
            <form class="was-validated" novalidate method="post">
              <% if(errors.length > 0){ %>
              <ul class="list-group">
                <% for(let e of errors){ %>
                <li class="list-group-item list-group-item-danger"><%= e %></li>
                <% } %>
              </ul>
              <% } %>
              <div class="row">
                <div class="col-lg-6 col-md-12">
                  <div class="card-body">
                    <label class="h4 mt-0 title" for="education"
                      >Education</label
                    >
                    <div class="form-group">
                      <div class="row mt-3">
                        <div class="col-sm-4">
                          <label for="level"
                            ><strong class="text-uppercase"
                              >Level:</strong
                            ></label
                          >
                        </div>
                        <div class="col-sm-8">
                          <select
                            class="form-control selectpicker"
                            id="level"
                            name="level"
                            required
                          >
                            <% for(let l of levels){ %> <% if(l ===
                            dto?.level){%>
                            <option value="<%= l %>" selected><%= l %></option>
                            <% }else{ %>
                            <option value="<%= l %>"><%= l %></option>
                            <% } %> <% } %>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="row">
                        <div class="col-sm-4">
                          <label for="field"
                            ><strong class="text-uppercase"
                              >Field:</strong
                            ></label
                          >
                        </div>
                        <div class="col-sm-8">
                          <input
                            type="text"
                            class="form-control"
                            name="field"
                            id="field"
                            placeholder="Field of Study"
                            value="<%= dto?.field %>"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="row">
                        <div class="col-sm-4">
                          <label for="branch"
                            ><strong class="text-uppercase"
                              >Branch:</strong
                            ></label
                          >
                        </div>
                        <div class="col-sm-8">
                          <input
                            type="text"
                            class="form-control"
                            name="branch"
                            id="branch"
                            placeholder="branch of Field"
                            value="<%= dto?.branch %>"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="row">
                        <div class="col-sm-4">
                          <label for="institute"
                            ><strong class="text-uppercase"
                              >Institute:</strong
                            ></label
                          >
                        </div>
                        <div class="col-sm-8">
                          <input
                            type="text"
                            class="form-control"
                            name="institute"
                            id="institute"
                            placeholder="Education Institute Title"
                            value="<%= dto?.institute %>"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="row">
                        <div class="col-sm-4">
                          <label for="entrance"
                            ><strong class="text-uppercase"
                              >Entrance Date:</strong
                            ></label
                          >
                        </div>
                        <div class="col-sm-8">
                          <input
                            type="date"
                            class="form-control"
                            name="entrance"
                            id="entrance"
                            value="<%= dto?.newEntrance %>"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="row">
                        <div class="col-sm-4">
                          <label for="graduate"
                            ><strong class="text-uppercase"
                              >Graduate Date:</strong
                            ></label
                          >
                        </div>
                        <div class="col-sm-8">
                          <input
                            type="date"
                            class="form-control"
                            name="graduate"
                            id="graduate"
                            value="<%= dto?.newGraduate %>"
                            required
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 col-md-12">
                  <div class="card-body">
                    <% for(let e of userEducations) { %>
                    <div class="card">
                      <div class="row">
                        <div
                          data-aos="fade-left"
                          data-aos-offset="50"
                          data-aos-duration="500"
                        >
                          <div class="card-body">
                          <div class="h5">
                            <a style="text-decoration:none;" href="/resume/education/<%= e.id %>">
                              <%= e.level %> Degree
                            </a>
                          </div>
                          <div class="h5">
                            <%= e.field %>, Branch <%= e.branch %>
                          </div>
                          <p class="category"><%= e.institute %></p>
                          <p>
                            <%= e.entrance.getFullYear() %> - <%=
                            e.graduate.getFullYear() %>
                            <a
                            class="progress-badge"
                            href="/resume/education/delete/<%= e.id %>"
                            ><i class="fa fa-trash"></i
                          ></a>
                          </p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-primary ml-3 mb-2">
                <% if(view.includes('Update')){ %> Edit <% }else{ %> Add <% } %>
              </button>
              <% if(view.includes('Create')){ %>
              <a
                href="/resume/work_experience"
                class="btn btn-secondery ml-3 mb-2"
              >
                Next Section
              </a>
              <% } %>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('./components/scripts'); -%>
  </body>
</html>
