<!DOCTYPE html>
<html lang="en-US">
  <%- include('./components/head'); -%>
  <body id="top">
    <div class="page-content">
      <div class="section" id="about">
        <div class="container">
          <%- include('./components/navbar'); -%>
          <div class="card" data-aos="fade-up" data-aos-offset="10">
            <form class="was-validated" novalidate method="post" enctype="multipart/form-data">
              <% if(errors.length > 0){ %>
              <ul class="list-group">
                <% for(let e of errors){ %>
                <li class="list-group-item list-group-item-danger"><%= e %></li>
                <% } %>
              </ul>
              <% } %>
              <div class="row">
                <div class="col-lg-6 col-md-12">
                  <div class="card-body">
                    <label class="h4 mt-0 title" for="about">About</label>
                    <div class="form-group">
                      <textarea
                        class="form-control"
                        name="about"
                        id="about"
                        rows="12"
                        style="font-size: 12pt"
                        required
                      >
<%= dto.about %></textarea
                      >
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 col-md-12">
                  <div class="card-body">
                    <div class="h4 mt-0 title">Basic Information</div>
                    <div class="row">
                      <div class="col-sm-4">
                        <label for="first"
                          ><strong class="text-uppercase"
                            >FirstName:</strong
                          ></label
                        >
                      </div>
                      <div class="col-sm-8">
                        <input
                          type="text"
                          class="form-control"
                          name="first"
                          id="first"
                          placeholder="24"
                          value="<%= dto.first %>"
                          required
                        />
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-4">
                        <label for="last"
                          ><strong class="text-uppercase"
                            >LastName:</strong
                          ></label
                        >
                      </div>
                      <div class="col-sm-8">
                        <input
                          type="text"
                          class="form-control"
                          name="last"
                          id="last"
                          placeholder="24"
                          value="<%= dto.last %>"
                          required
                        />
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-4">
                        <label for="age"
                          ><strong class="text-uppercase">Age:</strong></label
                        >
                      </div>
                      <div class="col-sm-8">
                        <input
                          type="number"
                          class="form-control"
                          name="age"
                          id="age"
                          placeholder="24"
                          value="<%= dto.age %>"
                          required
                        />
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-4">
                        <label for="email"
                          ><strong class="text-uppercase">Email:</strong></label
                        >
                      </div>
                      <div class="col-sm-8">
                        <input
                          type="email"
                          class="form-control"
                          name="email"
                          id="email"
                          placeholder="name@company.com"
                          value="<%= dto.email %>"
                          required
                        />
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-4">
                        <label for="phone"
                          ><strong class="text-uppercase">Phone:</strong></label
                        >
                      </div>
                      <div class="col-sm-8">
                        <input
                          type="number"
                          class="form-control"
                          name="phone"
                          id="phone"
                          placeholder="09121234567"
                          value="<%= dto.phone %>"
                          required
                        />
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-4">
                        <label for="address"
                          ><strong class="text-uppercase"
                            >Address:</strong
                          ></label
                        >
                      </div>
                      <div class="col-sm-8">
                        <input
                          type="text"
                          class="form-control"
                          name="address"
                          id="address"
                          placeholder="140, City Center, New York, U.S.A"
                          value="<%= dto.address %>"
                          required
                        />
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-4">
                        <strong class="text-uppercase">Business:</strong>
                      </div>
                      <div class="col-sm-8">
                        <select
                          class="form-control form-control-sm"
                          name="business[]"
                          multiple
                          required
                        >
                          <% for(let s of businesses){ %>
                            <% if(dto.business?.includes(s)){ %>
                              <option value="<%= s %>" selected><%= s %></option>
                            <% }else{ %>
                              <option value="<%= s %>"><%= s %></option>
                            <% } %>
                          <% } %>
                        </select>
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-4">
                        <strong class="text-uppercase">Language:</strong>
                      </div>
                      <div class="col-sm-8">
                        <select
                          class="form-control form-control-sm"
                          name="language[]"
                          multiple
                          required
                        >
                        <% for(let l of languages){ %>
                          <% if(dto.language?.includes(l)){ %>
                            <option value="<%= l %>" selected><%= l %></option>
                          <% }else{ %>
                            <option value="<%= l %>"><%= l %></option>
                          <% } %>
                        <% } %>
                        </select>
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-4">
                        <label for="pro_pic"
                          ><strong class="text-uppercase"
                            >Profile Picture:</strong
                          ></label
                        >
                      </div>
                      <div class="col-sm-8">
                        <img src="<% if(dto.pro_pic) { %>
                          <%= dto.pro_pic %>
                        <% }else{ %>
                          /images/default.png
                        <% } %>
                        " alt="">
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-4">
                        <label for="change_pic"
                          ><strong class="text-uppercase"
                            >Change Picture:</strong
                          ></label
                        >
                      </div>
                      <div class="col-sm-8">
                        <input
                          type="file"
                          class="form-control"
                          name="pro_pic"
                          id="change_pic"
                        />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-primary ml-3 mb-2">
                Save
              </button>
              <a class="btn btn-secondery ml-3 mb-2" href="/resume/skills">
                Next Section
              </a>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('./components/scripts'); -%>
  </body>
</html>
