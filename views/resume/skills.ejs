<!DOCTYPE html>
<html lang="en-US">
  <%- include('./components/head'); -%>
  <body id="top">
    <div class="page-content">
      <div class="section" id="about">
        <div class="container">
          <%- include('./components/navbar'); -%>
          <div class="card" data-aos="fade-up" data-aos-offset="10">
            <form class="was-validated" novalidate method="post">
              <% if(errors.length > 0){ %>
              <ul class="list-group">
                <% for(let e of errors){ %>
                <li class="list-group-item list-group-item-danger"><%= e %></li>
                <% } %>
              </ul>
              <% } %>
              <div class="row">
                <div class="col-lg-6 col-md-12">
                  <div class="card-body">
                    <label class="h4 mt-0 title" for="skill"
                      >Professional Skills</label
                    >
                    <div class="form-group">
                      <div class="row mt-3">
                        <div class="col-sm-4">
                          <label for="skill"
                            ><strong class="text-uppercase"
                              >Skill:</strong
                            ></label
                          >
                        </div>
                        <div class="col-sm-8">
                          <select
                            class="form-control selectpicker"
                            id="skill"
                            name="skill"
                            required
                          >
                            <% for(let s of skills){ %>
                              <% if(s === dto?.title){ %>
                                <option value="<%= s %>" selected><%= s %></option>
                              <% }else{ %>
                                <option value="<%= s %>"><%= s %></option>
                              <% } %>
                            <% } %>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="row mt-3">
                        <div class="col-sm-4">
                          <label for="score"
                            ><strong class="text-uppercase"
                              >Score:</strong
                            ></label
                          >
                        </div>
                        <div class="col-sm-8">
                          <input
                            type="number"
                            class="form-control"
                            name="score"
                            id="score"
                            placeholder="score from 0 to 100"
                            value="<%= dto?.score %>"
                            required
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 col-md-12">
                  <div class="card-body">
                    <% for(let skill of userSkills){ %>
                        <div class="progress-container progress-primary">
                          <span class="progress-badge"
                            ><a href="/resume/skills/<%= skill.id %>"
                              ><%= skill.title %></a
                            ></span
                          >
                          <a
                            class="progress-badge ml-2"
                            href="/resume/skills/delete/<%= skill.id %>"
                            ><i class="fa fa-trash"></i
                          ></a>
                          <div class="progress">
                            <div
                              class="progress-bar progress-bar-primary"
                              data-aos="progress-full"
                              data-aos-offset="10"
                              data-aos-duration="2000"
                              role="progressbar"
                              aria-valuenow="<%= skill.score %>"
                              aria-valuemin="0"
                              aria-valuemax="100"
                              style="width: <%= skill.score %>%"
                            ></div>
                            <span class="progress-value"><%= skill.score %>%</span>
                          </div>
                        </div>
                      <% } %>
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-primary ml-3 mb-2">
                <% if(view.includes('Update')){ %>
                  Edit
                <% }else{ %>
                  Add
                <% } %>
              </button>
              <% if(view.includes('Create')){ %>
                <a href="/resume/education" class="btn btn-secondery ml-3 mb-2">
                  Next Section
                </a>
              <% } %>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('./components/scripts'); -%>
  </body>
</html>
